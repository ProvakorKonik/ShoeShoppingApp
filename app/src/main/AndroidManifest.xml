<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.konik.box">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoeBox">
        <activity android:name="com.konik.box.View.OrderDetails"></activity>
        <activity android:name="com.konik.box.View.PB_Cart" />
        <activity android:name="com.konik.box.View.ProductDetails" />
        <activity android:name="com.konik.box.View.ProductAdd" />
        <activity android:name="com.konik.box.View.CategoryAdd" />
        <activity android:name="com.konik.box.View.LoginRegistration" />
        <activity android:name="com.konik.box.LoginCheck" />
        <activity
            android:name="com.konik.box.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>